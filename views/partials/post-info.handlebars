<article class="post">
    <div class="title">
        <h2>{{title}}</h2>
    </div>
    <div class="contents">
        <p>{{contents}}</p>
    </div>
    <div class="meta">
        {{user.username}} on {{format_date createdAt}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>