<article>
  <h1 class="bg-dark text-light p-1">Dashboard</h1>

  <form class="edit-post-form m-3 w-25 border border-dark border-2 p-1">
    <h2>Edit Post</h2>
    <div>
      <input name="post-title" type="text" value="{{post.title}}" class="form-control mb-1" />
      <input name="post-contents" type="text" value="{{post.contents}}" class="form-control mb-1" />
    </div>
    <div class="bg-light mb-1">
      by You on {{format_date post.createdAt}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn btn-primary">Save post</button>
    <button type="button" class="delete-post-btn btn btn-danger">Delete post</button>
  </form>
</article>

<form class="comment-form m-3 w-25 p-1">
  <textarea name="comment-body" class="form-control"></textarea>
  <button type="submit" class="btn btn-primary">Add Comment</button>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>